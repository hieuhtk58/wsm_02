<% provide :title, t("request_leaves.index.title") %>

<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= t "index" %></th>
        <th><%= t "time_off_from" %></th>
        <th><%= t "time_off_to" %></th>
        <th><%= t "reason" %></th>
        <th><%= t "status" %></th>
        <th><%= t "action" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @request_leaves %>
    </tbody>
  </table>
  <center><%= paginate @request_leaves %></center>
</div>

<%= link_to t(".new", default: t("helpers.links.new")),
  new_request_leave_path,
  class: "btn btn-primary" %>
