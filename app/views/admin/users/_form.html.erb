<div class="form_center">
  <%= form_for [:admin, @user] do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :gender %>
      <%= f.select :gender, User.genders.keys %>
    </div>
    <div class="field">
      <%= f.label :birthday %>
      <%= t "example_date" %>
      <%= f.date_field :birthday %>
    </div>
    <div class="field">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, accept: Settings.image_format_accept %>
    </div>
    <div class="field">
      <%= f.label :role %>
      <%= f.select :role, User.roles.keys %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <% if @user.id.blank? %>
      <div class="field">
        <%= f.label :password %>
        <em>
          <%= t "open_parenthesis" %> <%= Settings.min_password %>
          <%= t "characters_minimum" %> <%= t "close_parenthesis" %>
        </em>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    <% end %>
    <div class="field">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
