<%- model_class = RequestOff -%>
<div class="page-header">
  <h1><%=t ".title", default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:address_contact) %></th>
      <th><%= model_class.human_attribute_name(:off_have_salary_from) %></th>
      <th><%= model_class.human_attribute_name(:off_have_salary_to) %></th>
      <th><%= model_class.human_attribute_name(:special_dayoff_setting_id) %></th>
      <th><%= model_class.human_attribute_name(:off_no_salary_from) %></th>
      <th><%= model_class.human_attribute_name(:off_no_salary_to) %></th>
      <th><%= model_class.human_attribute_name(:reason) %></th>
      <th><%= model_class.human_attribute_name(:special_dayoff_type_id) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:approve_group) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%=t ".actions", :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @request_offs.each do |request_off| %>
      <tr>
        <td><%= link_to request_off.id, request_off_path(request_off) %></td>
        <td><%= request_off.phone_number %></td>
        <td><%= request_off.address_contact %></td>
        <td><%= request_off.off_have_salary_from %></td>
        <td><%= request_off.off_have_salary_to %></td>
        <td><%= request_off.special_dayoff_setting_id %></td>
        <td><%= request_off.off_no_salary_from %></td>
        <td><%= request_off.off_no_salary_to %></td>
        <td><%= request_off.reason %></td>
        <td><%= request_off.special_dayoff_type_id %></td>
        <td><%= request_off.status %></td>
        <td><%= request_off.approve_group %></td>
        <td><%= request_off.user_id %></td>
        <td>
          <%= link_to t(".edit", default: t("helpers.links.edit")),
            edit_request_off_path(request_off), class: "btn btn-mini" %>
          <%= link_to t(".destroy", default: t("helpers.links.destroy")),
            request_off_path(request_off),
            method: :delete,
            data: {
              confirm: t(".confirm",
              default: t("helpers.links.confirm", default: "Are you sure?"))
            },
            class: "btn btn-mini btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t(".new", default: t("helpers.links.new")),
  new_request_off_path,
  class: "btn btn-primary" %>
