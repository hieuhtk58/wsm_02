<%- model_class = RequestOff -%>
<div class="page-header">
  <h1><%=t ".title", default: model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:from) %>:</strong></dt>
  <dd><%= @request_off.from %></dd>
  <dt><strong><%= model_class.human_attribute_name(:to) %>:</strong></dt>
  <dd><%= @request_off.to %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reason) %>:</strong></dt>
  <dd><%= @request_off.reason %></dd>
  <dt><strong><%= model_class.human_attribute_name(:special_dayoff_type_id) %>:</strong></dt>
  <dd><%= @request_off.special_dayoff_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @request_off.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:approve_group) %>:</strong></dt>
  <dd><%= @request_off.approve_group %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @request_off.user_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t(".back", default: t("helpers.links.back")),
    request_offs_path, class: "btn"  %>
  <%= link_to t(".edit", default: t("helpers.links.edit")),
    edit_request_off_path(@request_off), :class => "btn" %>
  <%= link_to t(".destroy", default: t("helpers.links.destroy")),
    request_off_path(@request_off),
    method: "delete",
    data: {
      confirm: t(".confirm",
      default: t("helpers.links.confirm", default: "Are you sure?"))
    },
    class: "btn btn-danger" %>
</div>
