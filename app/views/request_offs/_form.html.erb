<%= simple_form_for @request_off,
  html: {class: "simple_form col-md-6 col-md-offset-3"} do |f| %>
  <div class="form-group">
    <%= label_tag :employee_name %>
    <%= text_field_tag :employee_name,
      current_user.name, disabled: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :employee_code %>
    <%= text_field_tag :employee_code,
      current_user.employee_code, disabled: true, class: "form-control" %>
  </div>
  <%= f.input :project_name %>
  <%= f.input :position_name %>
  <%= f.input :department %>

  <div class="form-group">
    <div class="row">
      <div class="col-md-5">
        <%= f.label :request_date %>
        <%= f.date_field :request_date, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-5">
        <%= f.label :off_have_salary_from %>
        <%= f.datetime_local_field :off_have_salary_from,
          class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-5">
        <%= f.label :off_have_salary_to %>
        <%= f.datetime_local_field :off_have_salary_to,
          class: "form-control" %>
      </div>
    </div>
  </div>

  <%= f.input :special_dayoff_setting_id %>
  <%= f.input :special_dayoff_type_id %>

  <div class="form-group">
    <div class="row">
      <div class="col-md-5">
        <%= f.label :off_no_salary_from %>
        <%= f.datetime_local_field :off_no_salary_from,
          class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-5">
        <%= f.label :off_no_salary_to %>
        <%= f.datetime_local_field :off_no_salary_to,
          class: "form-control" %>
      </div>
    </div>
  </div>

  <%= f.input :reason, as: :text, input_html: {rows: 5} %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
