<%= render "layouts/background_login" %>
<div id="login-container"
  class="animation-fadeIn forgot_password_header top_forgot_password row">
  <div class="login-title text-center row">
    <h1>
      <i class="gi gi-flash"></i>
      <strong><%= t "workspace" %> </strong>
      <br>
      <small>
        <strong><%= t "forgot_password" %></strong>
      </small>
    </h1>
  </div>
  <div class="block push-bit login_form row">
    <div class="row">
      <%= form_for resource, as: resource_name,
        url: password_path(resource_name),
        class: "form-horizontal form-bordered form-control-borderless",
          html: {method: :post} do |f| %>
        <div class="form-group">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon"><i class="gi gi-envelope"></i></span>
              <%= f.email_field :email, autofocus: true,
                class: "form-control input-lg", placeholder: t("email") %>
            </div>
          </div>
        </div>
       <div class="form-group row">
        <%= f.submit t("reset_password"), class: "btn btn-primary col-md-12" %>
      </div>
      <% end %>
    </div>
    <div class="form-group">
      <div class="color_format text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
