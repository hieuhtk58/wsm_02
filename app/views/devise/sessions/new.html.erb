<%= render "layouts/background_login" %>
<div id="login-container" class="animation-fadeIn login_header row">
  <div class="login-title text-center row">
    <h1>
      <i class="gi gi-flash"></i>
      <strong><%= t "workspace"%> </strong>
      <br>
      <small>
        <%= t "please" %>
        <strong><%= t "login" %></strong>
        <%= t "or" %>
        <strong><%= t "register" %></strong>
      </small>
    </h1>
  </div>
  <div class="block push-bit login_form row">
    <div class="row">
      <%= form_for resource, as: resource_name,
        url: session_path(resource_name),
        class: "form-horizontal form-bordered form-control-borderless" do |f| %>
        <div class="form-group">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="gi gi-envelope"></i>
              </span>
              <%= f.text_field :email, autofocus: true,
                class: "form-control input-lg", placeholder: t("email") %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="gi gi-asterisk"></i>
              </span>
              <%= f.password_field :password, autocomplete: "off",
                class: "form-control input-lg", placeholder: t("password") %>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-xs-2">
            <label class="switch switch-primary" data-toggle="tooltip">
              <%= f.check_box :remember_me %>
              <span></span>
            </label>
          </div>
          <div class="col-xs-4 color_format">
            <%= f.label :remember_me %>
          </div>
        </div>
        <div class="form-group row margin_row_bottom form-actions">
          <%= f.submit t("login"), class: "btn btn-primary col-md-12" %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <a class="btn btn-block btn-social btn-facebook col-md-4">
        <i class="facebookelegance-icons-"></i>
        <%= t "sign_in_with_facebook" %>
      </a>
      <a class="btn btn-block btn-social btn-twitter col-md-4">
        <i class="twitter-birdelegance-icons-"></i>
        <%= t "sign_in_with_twitter" %>
      </a>
      <a class="btn btn-block btn-social btn-google-plus col-md-4">
        <i class="google-pluselegance-icons-"></i>
        <%= t "sign_in_with_google_plus" %>
      </a>
    </div>
    <div class="form-group">
      <div class="color_format text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
