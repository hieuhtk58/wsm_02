<div class="container container_content">
  <center><h3><%= t "devise.mailer.password_change.subject" %></h3></center>
  <div class="form_center">
    <%= form_for resource, as: resource_name,
      url: registration_path(resource_name), html: {method: :put} do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :password %>
        <i>
          <%= t "open_parenthesis" %>
          <%= t "leave_blank_if_you_do_not_want_to_change_it" %>
          <%= t "close_parenthesis" %>
        </i>
        <%= f.password_field :password, autocomplete: "off",
          class: "form-control" %>
        <% if @minimum_password_length %>
          <em>
            <%= t "open_parenthesis" %> <%= @minimum_password_length %>
            <%= t "characters_minimum" %> <%= t "close_parenthesis" %>
          </em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off",
          class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :current_password %>
        <i>
          <%= t "open_parenthesis" %>
          <%= t "we_need_your_current_password_to_confirm_your_changes" %>
          <%= t "close_parenthesis" %>
        </i>
        <%= f.password_field :current_password, autocomplete: "off",
          class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit t("update"), class: "form-control btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
