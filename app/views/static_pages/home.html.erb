      <div class="w-col w-col-4 wp1">
        <div class="icon-box">
          <i class="cupelegance-icons-"></i>
          <h4 class="icons-heading"><%= t "working_space" %></h4>
          <p><%= t "manager_can_make_a_new_working_space_and_management" %></p>
        </div>
      </div>
      <div class="w-col w-col-4 wp1 delay-05s">
        <div class="icon-box">
          <i class="paramselegance-icons-"></i>
          <h4 class="icons-heading"><%= t "timesheet" %></h4>
          <p><%= t "can_view_timesheet_and_export_file" %></p>
