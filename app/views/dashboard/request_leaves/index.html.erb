<h3 class="text-center"><%= t ".list_request_leave" %></h3>
<%= search_form_for [:dashboard, @search], class: "col-md-12" do |f| %>
  <div class="form-group col-md-2">
    <%= f.text_field :user_name_cont,
      placeholder: t(".staff_name"),
      class: "form-control" %>
  </div>

  <div class="form-group col-md-2">
    <%= f.select :leave_type_id_eq,
      options_from_collection_for_select(LeaveType.all,
        "id", "name", @search.leave_type_id_eq),
      {include_blank: t(".choose_leave_type")}, class: "form-control" %>
  </div>

  <div class="form-group col-md-2">
    <%= f.select :status_eq, @statuses,
      {include_blank: t(".choose_status")},
      class: "form-control" %>
  </div>

  <div class="form-group col-md-2">
    <%= f.date_field :created_at_gteq,
      placeholder: t(".create_from"),
      class: "form-control" %>
  </div>

  <div class="form-group col-md-2">
    <%= f.date_field :created_at_lteq,
      placeholder: t(".create_to"),
      class: "form-control" %></div>

  <div class="form-group col-md-2">
    <%= f.submit t(".search"), class: "btn btn-primary" %>
  </div>
<% end %>

<div class="col-md-12">
  <table class="table table-striped table-hover">
    <thead>
      <th class="col-sm-1"><%= t ".no_num" %></th>
      <th class="col-sm-1">
        <%= sort_link @search, :created_at, t(".created_at") %>
      </th>
      <th class="col-sm-1"><%= t ".leave_from" %></th>
      <th class="col-sm-1"><%= t ".leave_to" %></th>
      <th class="col-sm-1"><%= t ".reason" %></th>
      <th class="col-sm-2"><%= t ".compensation" %></th>
      <th class="col-sm-1">
        <%= sort_link @search, "users.name", t(".staff_name") %>
      </th>
      <th class="col-sm-1"><%= t ".kind_of_leave" %></th>
      <th class="col-sm-1"><%= t ".time" %></th>
      <th class="col-sm-2"><%= t ".status" %></th>
    </thead>
    <tbody>
      <%= render(partial: "request_leave", collection: @request_leaves) || t(".no_reqquest_leave_display") %>
    </tbody>
  </table>
  <center><%= paginate @request_leaves %></center>
</div>
