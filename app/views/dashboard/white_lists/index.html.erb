<% provide :title, t("dashboard.whitelist.index.whitelist_users") %>
  <% if current_user.manager? %>
    <div class="col-md-12">
      <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#add-user">
        <%= t "add_user" %>
      </button>
    </div>
  <% end %>
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th><%= t "index" %></th>
          <th><%= t "employee_code" %></th>
          <th><%= t "name" %></th>
          <th><%= t "email" %></th>
          <th><%= t "role" %></th>
          <th><%= t "dashboard.users.index.company" %></th>
          <th><%= t "gender" %></th>
          <th><%= t "birthday" %></th>
          <th><%= t "action" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
    <center><%= paginate @users %></center>
  </div>

<%= render "dashboard/white_lists/add_user" %>
