<% provide :title, t(".title") %>
<h3 class="text-center"><%= t ".title" %></h3>

<%= search_form_for [:dashboard, @search], class: "col-md-12" do |f| %>
  <div class="col-md-2 form-group">
    <%= f.text_field :user_name_cont, placeholder: t(".staff_name"),
      class: "form-control" %>
  </div>

  <div class="col-md-2 form-group">
    <%= f.select :status_eq, @statuses,
      {include_blank: t(".choose_status")}, class: "form-control" %>
  </div>

  <div class="col-md-2 form-group">
    <%= f.date_field :created_at_gteq, placeholder: t(".create_from"),
      class: "form-control" %>
  </div>

  <div class="col-md-2 form-group">
    <%= f.date_field :created_at_lteq, placeholder: t(".create_to"),
      class: "form-control" %>
  </div>

  <div class="col-md-2 form-group">
    <%= f.submit t(".search"), class: "btn btn-primary" %>
  </div>
<% end %>

<div class="col-md-12">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= t "index" %></th>
        <th><%= sort_link @search, :created_at, t(".created_at") %></th>
        <th><%= sort_link @search, "users.name", t(".staff_name") %></th>
        <th><%= t "time_off_from" %></th>
        <th><%= t "time_off_to" %></th>
        <th><%= t "reason" %></th>
        <th><%= t "status" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render(partial: "request_off", collection: @request_offs) || t(".no_request_off_displayed") %>
    </tbody>
  </table>
  <center><%= paginate @request_offs %></center>
</div>
