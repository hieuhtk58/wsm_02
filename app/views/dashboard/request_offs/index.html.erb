<% provide :title, t("request_offs.index.title") %>
<h3 class="text-center"><%= t ".title" %></h3>
<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= t "index" %></th>
        <th><%= t "time_off_from" %></th>
        <th><%= t "time_off_to" %></th>
        <th><%= t "reason" %></th>
        <th><%= t "status" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "request_off", collection: @request_offs %>
    </tbody>
  </table>
  <center><%= paginate @request_offs %></center>
</div>
