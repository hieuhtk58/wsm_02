<% provide :title, t(".workspaces") %>
<h3 class="text-center"><%= t ".workspaces" %></h3>

<div class="container">
  <div class="row">
    <button class="btn btn-primary" data-toggle="modal"
      data-target="#new_workspace"><%= t".create_workspace" %></button>
  <div>
  <div class="space"></div>
  <div class="row">
    <div id="workspaces">
      <%= render @workspaces %>
    </div>
  </div>
  <div class="row">
    <div id="paginate">
      <%= paginate @workspaces %>
    </div>
  </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog"
  aria-labelledby="myLargeModalLabel" aria-hidden="true" id ="new_workspace">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-config">
        <h3 class="text-center"><%= t ".new_workspace" %></h3>
        <div id="workspace_form">
          <%= render "form" %>
        </div>
      </div>
    </div>
  </div>
</div>
